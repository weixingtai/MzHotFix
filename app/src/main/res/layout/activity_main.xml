<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_origin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_immersive_item_bkg_head"
            android:paddingVertical="14dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="16dp"
                android:layout_toStartOf="@id/fl_origin"
                android:orientation="vertical"
                android:paddingStart="0dp"
                android:paddingEnd="14dp">

                <android.widget.TextView
                    android:id="@+id/tv_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fadingEdge="horizontal"
                    android:maxLines="2"
                    android:text="原生热更新"
                    android:textColor="#000000"
                    android:textDirection="locale"
                    android:textSize="17sp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:minWidth="@dimen/preference_widget_width">

                <android.widget.ImageView
                    android:id="@+id/iv_origin_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/mz_arrow_next_right" />

            </FrameLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sophix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/shape_immersive_item_bkg_foot"
            android:paddingVertical="14dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="16dp"
                android:layout_toStartOf="@id/fl_sophix"
                android:orientation="vertical"
                android:paddingStart="0dp"
                android:paddingEnd="14dp">

                <android.widget.TextView
                    android:id="@+id/tv_sophix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fadingEdge="horizontal"
                    android:maxLines="2"
                    android:text="阿里Sophix热更新"
                    android:textColor="#000000"
                    android:textDirection="locale"
                    android:textSize="17sp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_sophix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:minWidth="@dimen/preference_widget_width">

                <android.widget.ImageView
                    android:id="@+id/iv_sophix_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/mz_arrow_next_right" />

            </FrameLayout>

        </RelativeLayout>
    </LinearLayout>

</ScrollView>
